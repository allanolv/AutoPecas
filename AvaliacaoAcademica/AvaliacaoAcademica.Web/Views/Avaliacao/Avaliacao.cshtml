@model IEnumerable<AvaliacaoAcademica.Domain.Model.Avaliacao>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Avaliacao</title>
</head>
<body>
    <p>
        @Html.ActionLink("Inserir Avaliacao", "InserirAvaliacao")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objetivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraFim)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Objetivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraFim)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarAvaliacao", new { id=item.Id }) |
                @Html.ActionLink("Exibir", "ExibirAvaliacao", new { id=item.Id }) |
                @Html.ActionLink("Excluir", "ExcluirAvaliacao", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
